<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.noah.rackettrack_it.AdvancedReport">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_above="@+id/submitButton">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/advancedlinLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score"
                android:id="@+id/textView6"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:fontFamily="sans-serif-thin" />

            <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/winLoss"
                        android:checked="false"
                        android:textOn="my win"
                        android:textOff="my loss"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-thin"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/set1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set 1"
                    android:id="@+id/textView8"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginRight="20dp" />

                <NumberPicker
                            android:layout_width="80dp"
                            android:layout_height="110dp"
                            android:id="@+id/numberPicker"
                            android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:id="@+id/textView7"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-thin" />

                <NumberPicker
                            android:layout_width="80dp"
                            android:layout_height="110dp"
                            android:id="@+id/numberPicker2"
                            android:layout_marginRight="10dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/set2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set 2"
                    android:id="@+id/textView9"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginRight="20dp" />

                <NumberPicker
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:id="@+id/numberPicker3"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:id="@+id/textView11"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-thin" />

                <NumberPicker
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:id="@+id/numberPicker4"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/set3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set 3"
                    android:id="@+id/textView10"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginRight="20dp" />

                <NumberPicker
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:id="@+id/numberPicker5"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:id="@+id/textView12"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-thin" />

                <NumberPicker
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:id="@+id/numberPicker6"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comments"
                android:textSize="30dp"
                android:id="@+id/textView5"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-thin" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/overallComments"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="general comments"
                android:id="@+id/textView13"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-thin" />


</RelativeLayout>
