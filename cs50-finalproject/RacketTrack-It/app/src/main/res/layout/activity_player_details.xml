<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.noah.rackettrack_it.PlayerDetails">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000bff"
        android:textSize="50dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Report"
        android:id="@+id/addReportButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/openDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-thin"
        android:capitalize="none" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Player"
        android:id="@+id/editButton"
        android:layout_alignTop="@+id/addReportButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-thin"
        android:capitalize="none" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reportsList"
        android:layout_below="@+id/addReportButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:drawSelectorOnTop="false"
        android:choiceMode="singleChoice"
        android:clickable="false" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/openDetails"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:backgroundTint="#fffffb50"
            android:layout_below="@+id/playerName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="sans-serif-thin" />

</RelativeLayout>
