<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="welcome" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hello"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#ff0100ff"
        android:fontFamily="sans-serif-thin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add a player"
        android:id="@+id/report_button"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/hello"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-thin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="find a player"
        android:id="@+id/findReportButton"
        android:layout_below="@+id/report_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:fontFamily="sans-serif-thin" />

</RelativeLayout>
